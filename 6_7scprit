local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local PlaceID = game.PlaceId

-- Biến kiểm tra trạng thái bấm
local hasClickedTikTok = false
local hasClickedDiscord = false

-- [[ 1. CẤU HÌNH NÚT BẤM TRÒN ]] --
local ScreenGui = Instance.new("ScreenGui")
local ImageButton = Instance.new("ImageButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.CoreGui
ImageButton.Parent = ScreenGui
ImageButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
ImageButton.Size = UDim2.new(0, 45, 0, 45)
ImageButton.Position = UDim2.new(0.1, 0, 0.15, 0)
ImageButton.Draggable = true
ImageButton.Active = true
ImageButton.Image = "rbxassetid://83932975706860" 
UICorner.CornerRadius = UDim.new(1, 0)
UICorner.Parent = ImageButton

-- [[ 2. KHỞI TẠO CỬA SỔ MENU ]] --
local Window = Fluent:CreateWindow({
    Title = "Tổng Hợp Script",
    SubTitle = "6_7 Hub",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 320),
    Acrylic = true,
    Theme = "Amethyst",
    MinimizeKey = Enum.KeyCode.End
})

ImageButton.MouseButton1Click:Connect(function()
    Window:Minimize()
end)

local Tabs = {}

-- [[ 3. TAB THÔNG TIN ]] --
Tabs.Info = Window:AddTab({ Title = "Thông Tin", Icon = "info" })

Tabs.Info:AddButton({
    Title = "Discord Community",
    Description = "Tham gia để nhận thông báo mới",
    Callback = function()
        if hasClickedDiscord then
            Fluent:Notify({ Title = "Thông báo", Content = "Bạn đã lấy link discord rồi!", Duration = 5 })
        else
            hasClickedDiscord = true
            setclipboard("https://discord.gg/DBFVrAzbB")
            Fluent:Notify({ Title = "Thành công", Content = "Đã copy link discord!", Duration = 5 })
        end
    end
})

Tabs.Info:AddButton({
    Title = "Kênh Tiktok",
    Description = "Mpk Roblox",
    Callback = function() 
        if hasClickedTikTok then
            Fluent:Notify({ Title = "Thông báo", Content = "Bạn đã lấy link tiktok rồi!", Duration = 5 })
        else
            hasClickedTikTok = true
            setclipboard("https://www.tiktok.com/@kaiiz_12")
            Fluent:Notify({ Title = "Thành công", Content = "Đã copy link tiktok!", Duration = 5 })
        end
    end
})

-- [[ 4. PHÂN LOẠI GAME ]] --
if PlaceID == 10449761463 then
    -- Jujutsu Shenanigans
    Tabs.Game = Window:AddTab({ Title = "Jujutsu Shenanigans", Icon = "zap" })
    Tabs.Game:AddButton({
        Title = "Spotlight Hub",
        Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com/NotEnoughJack/localplayerscripts/refs/heads/main/script'))() end
    })
    Tabs.Game:AddButton({
        Title = "Tbo Hub",
        Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/cool5013/TBO/main/TBOscript"))() end
    })
elseif PlaceID == 2753915549 or PlaceID == 4442272183 or PlaceID == 7449423635 then
    -- Blox Fruits
    Tabs.Game = Window:AddTab({ Title = "Blox Fruits", Icon = "sword" })
    Tabs.Game:AddButton({
        Title = "Redz Hub",
        Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/newredz/BloxFruits/refs/heads/main/Source.luau"))() end
    })
else
    -- Game Khác & Ghi chú (Thêm ở đây)
    Tabs.Other = Window:AddTab({ Title = "Game Khác", Icon = "globe" })
    
    Tabs.Other:AddParagraph({
        Title = "Thông báo",
        Content = "Script này không hỗ trợ hoặc chưa có!"
    })

    Tabs.Other:AddButton({
        Title = "Infinite Yield (Lệnh Admin)",
        Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))() end
    })
end

-- [[ 5. TAB CÀI ĐẶT (NẰM DƯỚI CÙNG) ]] --
Tabs.Settings = Window:AddTab({ Title = "Cài Đặt", Icon = "settings" })

-- Nút Fix Lag
Tabs.Settings:AddButton({
    Title = "Fix Lag (Siêu Mượt)",
    Description = "Giảm đồ họa, tăng FPS",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/TurboLite/Script/main/FixLag.lua"))()
        Fluent:Notify({Title = "Hệ thống", Content = "Đã kích hoạt Fix Lag!", Duration = 3})
    end
})

-- Chỉnh màu
local Colorpicker = Tabs.Settings:AddColorpicker("ColorPicker", {
    Title = "Chỉnh màu Menu",
    Default = Color3.fromRGB(167, 83, 245)
})

Colorpicker:OnChanged(function(Value)
    Fluent.AccentColor = Value
end)

-- Kết thúc
Window:SelectTab(1)
Fluent:Notify({
    Title = "6_7 Hub",
    Content = "Khởi động thành công! Đã thêm ghi chú hỗ trợ game.",
    Duration = 5
})
